<tr>
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-0">
    <div class="flex items-center">
      <div class="h-10 w-10 flex-shrink-0">
        <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
      </div>
      <div class="ml-4">
        <div class="font-medium text-gray-900"></div>
        <div class="text-gray-500"><%= user.email %></div>
      </div>
    </div>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <div class="text-gray-900">Front-end Developer</div>
    <div class="text-gray-500">Optimization</div>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">Active</span>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <% user.roles.each do |role| %>
      <span class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800"><%= role.name %></span>
    <% end %>
  </td>
  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
    <%= link_to t('actions.edit'), edit_administrators_user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
    <%= link_to t('actions.view'), administrators_user_path(user), class: "text-indigo-600 hover:text-indigo-900" %>
  </td>
</tr>
